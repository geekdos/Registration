{% extends 'layout.html.twig' %}
{% block title %}{{ etudiantDeug.cne }}{% endblock %}
{% block body %}
    <div class="col-md-3">
        <div class="row">
            <div class="panel panel-purple">
                <div class="panel-heading clearfix">
                    <h4 class="panel-title">
                        {{ 'attention'|trans }}
                    </h4>
                </div>
                <div class="panel-body">
                    <p class="text-right">
                        {{ 'pdfverifar'|trans }}
                    </p>
                    <p>
                        {{ 'pdfveriffr'|trans }}
                    </p>
                </div>
            </div>
            <div class="col-md-12">
                <a href="{{ path('reregistration_re_create_pdf', {'cne': etudiantDeug.cne }) }}" class="btn btn-success btn-block" target="_blank">
                    <i class="fa fa-file-pdf-o"></i> {{ 'pdf_gen'|trans }}
                </a>
            </div>
            <hr>
            <div class="col-md-12">
                <a href="{{ path('etudiantdeug_edit', { 'id': etudiantDeug.id }) }}" class="btn btn-info pull-left  btn-block">
                    <i class="fa fa-edit"></i> {{ 'modifier'|trans }}
                </a>
            </div>
            <hr>
            {% if is_granted("ROLE_ADMIN") %}
                <hr>
                <div class="col-md-12">
                    {{ form_start(delete_form) }}
                    <button type="submit" class="btn btn-danger btn-block">
                        <i class="fa fa-trash"></i> {{ 'effacer'|trans }}
                    </button>
                    {{ form_end(delete_form) }}
                </div>
            {% endif %}
        </div>
    </div>
    <div class="col-md-9">
        <div class="col-md-3">
            {% if  etudiantDeug.media != null %}
                <img width="120px" src="http://registration.com/{% path etudiantDeug.media, 'reference' %}" alt="No image">
            {% else %}
                <img src="http://registration.com/bundles/reregistration/assets/images/no-image.jpg" alt="No image">
            {% endif %}
        </div>
        <div class="col-md-9">
            <h3><code>{{ 'votre_filiere'|trans }} {{ etudiantDeug.filiere.nom }}</code></h3>
        </div>
        <div class="panel panel-purple">
            <div class="panel-heading">
            </div>
            <div class="panel-body">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>{{ 'etudiant.cne'|trans }}</th>
                        <td>{{ etudiantDeug.cne }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'etudiant.nationalite'|trans }}</th>
                        <td>{{ etudiantDeug.nationalite }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'etudiant.nationalite'|trans }}</th>
                        <td>{{ etudiantDeug.nomfr }}</td>
                    </tr>
                    <tr>
                        <th>Prenom en Français</th>
                        <td>{{ etudiantDeug.prenomfr }}</td>
                    </tr>
                    <tr>
                        <th>Nom en Arabe</th>
                        <td>{{ etudiantDeug.nomAr }}</td>
                    </tr>
                    <tr>
                        <th>Prenom en Arabe</th>
                        <td>{{ etudiantDeug.prenomAr }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'etudiant.sexe'|trans }}</th>
                        <td>{{ etudiantDeug.sexe }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'etudiant.etatCivil'|trans }}</th>
                        <td>{{ etudiantDeug.etatCivil }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'etudiant.handicap'|trans }}</th>
                        <td>{% if etudiantDeug.handicap %}Oui{% else %}Non{% endif %}</td>
                    </tr>
                    <tr>
                        <th>{{ 'etudiant.bourse'|trans }}</th>
                        <td>{% if etudiantDeug.bourse %}Oui{% else %}Non{% endif %}</td>
                    </tr>
                    <tr>
                        <th>Lieu de naissance en Français</th>
                        <td>{{ etudiantDeug.lieuNaissFr }}</td>
                    </tr>
                    <tr>
                        <th>Lieu de naissance en Arabe</th>
                        <td>{{ etudiantDeug.lieuNaissAr }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'etudiant.dateNaiss'|trans }}</th>
                        <td>{% if etudiantDeug.dateNaiss %}{{ etudiantDeug.dateNaiss|date('Y-m-d') }}{% endif %}</td>
                    </tr>
                    <tr>
                        <th>{{ 'etudiant.cin'|trans }}</th>
                        <td>{{ etudiantDeug.cin }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'etudiant.gsm'|trans }}</th>
                        <td>{{ etudiantDeug.gsm }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'etudiant.email'|trans }}</th>
                        <td>{{ etudiantDeug.email }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="panel-footer">
                <div class="col-md-4">
                    <a href="{{ path('reregistration_re_create_pdf', {'cne': etudiantDeug.cne }) }}" class="btn btn-success btn-block" target="_blank">
                        {{ 'pdf_gen'|trans }}
                    </a>
                </div>
                <div class="col-md-4">
                    <a href="{{ path('etudiantdeug_edit', { 'id': etudiantDeug.id }) }}" class="btn btn-info pull-left  btn-block">
                        {{ 'modifier'|trans }}
                    </a>
                </div>
                {% if is_granted("ROLE_ADMIN") %}
                    <div class="col-md-4">
                        {{ form_start(delete_form) }}
                        <input type="submit" class="btn btn-danger pull-right btn-block" value="Effacer | حذف">
                        {{ form_end(delete_form) }}
                    </div>
                {% endif %}
            </div>

        </div>
    </div>
{% endblock %}
