{% extends 'layout.html.twig' %}


{% block body %}
    <h1>Etudiant list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Cne</th>
                <th>Nationalite</th>
                <th>Nomfr</th>
                <th>Prenomfr</th>
                <th>Sexe</th>
                <th>Handicap</th>
                <th>Lieunaissfr</th>
                <th>Datenaiss</th>
                <th>Cin</th>
                <th>Gsm</th>
                <th>Spesialite</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etudiant in etudiants %}
            <tr>
                <td>{{ etudiant.cne }}</td>
                <td>{{ etudiant.nationalite }}</td>
                <td>{{ etudiant.nomfr }}</td>
                <td>{{ etudiant.prenomfr }}</td>
                <td>{{ etudiant.sexe }}</td>
                <td>{% if etudiant.handicap %}Oui{% else %}Non{% endif %}</td>
                <td>{{ etudiant.lieuNaissFr }}</td>
                <td>{% if etudiant.dateNaiss %}{{ etudiant.dateNaiss|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ etudiant.cin }}</td>
                <td>{{ etudiant.gsm }}</td>
                <td>{{ etudiant.spesialite }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('etudiant_show', { 'id': etudiant.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('etudiant_edit', { 'id': etudiant.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('etudiant_new', {'parcours_id':2 }) }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
