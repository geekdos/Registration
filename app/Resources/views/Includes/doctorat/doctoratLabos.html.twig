<div class="col-md-6 center">
    <div class="panel panel-white">
        <div class="panel-heading clearfix">
            <h4 class="panel-title">Le Choix de la Filière <span class="text-right"> الشعبة</span> </h4>
        </div>
        <div class="panel-body">
            <form action="{{ path('reregistration_choix_filiere') }}" method="post">
                <div class="form-group">
                    <label for="filiere">{{'etudiant.filiere' |trans }}</label>
                    <br>
                    <select class="form-control" name="filiere" id="filiere">
                        <option value="{{ filiere.id }}">{{ filiere.nom }}</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">{{'select' |trans }}</button>
            </form>
        </div>
    </div>
</div>