{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Vous ete bien inscrit dans la Filiére <code>{{ etudiantMaster.filiere.nom }}</code></h1>
    <a href="{{ path('etudiantMaster_edit', { 'id': etudiantMaster.id }) }}" class="btn btn-info pull-left">Modifier | تغيير</a>
    {{ form_start(delete_form) }}
    <input type="submit" class="btn btn-danger pull-right" value="Effacer | حذف">
    {{ form_end(delete_form) }}
    <div class="panel panel-purple">
        <div class="panel-heading clearfix">
            <h4 class="panel-title">Vérifier Bien Vos informations avant de générer le PDF | عليك أن التحقق من المعلومات الخاصة بك قبل إنشاء بدف</h4>
        </div>
        <div class="panel-body">
            <table class="table">
                <tbody>
                <tr>
                    <th>CNE</th>
                    <td>{{ etudiantMaster.cne }}</td>
                </tr>
                <tr>
                    <th>Nationalité</th>
                    <td>{{ etudiantMaster.nationalite }}</td>
                </tr>
                <tr>
                    <th>Nom en Français</th>
                    <td>{{ etudiantMaster.nomfr }}</td>
                </tr>
                <tr>
                    <th>Prenom en Français</th>
                    <td>{{ etudiantMaster.prenomfr }}</td>
                </tr>
                <tr>
                    <th>Nom en Arabe</th>
                    <td>{{ etudiantMaster.nomAr }}</td>
                </tr>
                <tr>
                    <th>Prenom en Arabe</th>
                    <td>{{ etudiantMaster.prenomAr }}</td>
                </tr>
                <tr>
                    <th>Genre</th>
                    <td>{{ etudiantMaster.sexe }}</td>
                </tr>
                <tr>
                    <th>L'état civil</th>
                    <td>{{ etudiantMaster.etatCivil }}</td>
                </tr>
                <tr>
                    <th>Handicap</th>
                    <td>{% if etudiantMaster.handicap %}Oui{% else %}Non{% endif %}</td>
                </tr>
                <tr>
                    <th>Bourse</th>
                    <td>{% if etudiantMaster.bourse %}Oui{% else %}Non{% endif %}</td>
                </tr>
                <tr>
                    <th>Lieu de naissance en Français</th>
                    <td>{{ etudiantMaster.lieuNaissFr }}</td>
                </tr>
                <tr>
                    <th>Lieu de naissance en Arabe</th>
                    <td>{{ etudiantMaster.lieuNaissAr }}</td>
                </tr>
                <tr>
                    <th>Date de naissance</th>
                    <td>{% if etudiantMaster.dateNaiss %}{{ etudiantMaster.dateNaiss|date('Y-m-d') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>CIN</th>
                    <td>{{ etudiantMaster.cin }}</td>
                </tr>
                <tr>
                    <th>GSM</th>
                    <td>{{ etudiantMaster.gsm }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ etudiantMaster.email }}</td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="panel-footer">
            <hr>
            <a href="#" class="btn btn-success btn-large">générer le PDF | إنشاء بدف</a>
            <hr>
            <a href="{{ path('etudiantMaster_edit', { 'id': etudiantMaster.id }) }}" class="btn btn-info pull-left">Modifier | تغيير</a>
            {{ form_start(delete_form) }}
            <input type="submit" class="btn btn-danger pull-right" value="Effacer | حذف">
            {{ form_end(delete_form) }}
            <hr>
            <hr>
        </div>

    </div>
{% endblock %}